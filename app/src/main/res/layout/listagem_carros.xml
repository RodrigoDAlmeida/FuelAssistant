<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivListagemCarroLogo"
        android:layout_width="170dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/logo_fiat" />


    <TextView
        android:id="@+id/tvListagemCarroModelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_toEndOf="@+id/ivListagemCarroLogo"
        android:layout_toRightOf="@+id/ivListagemCarroLogo"
        android:text="Focus"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvListagemCarroAno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="0"
        android:text="2012"
        android:textAllCaps="false"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/ivListagemCarroLogo"
        android:layout_toRightOf="@+id/ivListagemCarroLogo"
        android:layout_toEndOf="@+id/ivListagemCarroLogo" />

    <TextView
        android:id="@+id/tvVeiculosCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvListagemCarroModelo"
        android:layout_toEndOf="@+id/ivListagemCarroLogo"
        android:layout_toRightOf="@+id/ivListagemCarroLogo"
        android:text="Hatch"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvVeiculosDataUltimoRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ãšltimo Registro: 20/12/2012"
        android:textSize="10sp"
        android:textStyle="italic"
        android:layout_marginLeft="73dp"
        android:layout_marginStart="73dp"
        android:layout_alignBottom="@+id/tvListagemCarroAno"
        android:layout_toRightOf="@+id/tvListagemCarroAno"
        android:layout_toEndOf="@+id/tvListagemCarroAno" />


</RelativeLayout>